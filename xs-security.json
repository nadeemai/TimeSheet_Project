{
  "xsappname": "timesheet-application",
  "tenant-mode": "dedicated",
  "description": "Security descriptor for Timesheet Application",
  "scopes": [
    {
      "name": "$XSAPPNAME.Employee",
      "description": "Employee role - Can manage own timesheets"
    },
    {
      "name": "$XSAPPNAME.Manager",
      "description": "Manager role - Can assign projects and approve timesheets"
    },
    {
      "name": "$XSAPPNAME.Admin",
      "description": "Admin role - Full system access"
    }
  ],
  "role-templates": [
    {
      "name": "Employee",
      "description": "Employee role template",
      "scope-references": [
        "$XSAPPNAME.Employee"
      ]
    },
    {
      "name": "Manager",
      "description": "Manager role template",
      "scope-references": [
        "$XSAPPNAME.Manager",
        "$XSAPPNAME.Employee"
      ]
    },
    {
      "name": "Admin",
      "description": "Administrator role template",
      "scope-references": [
        "$XSAPPNAME.Admin",
        "$XSAPPNAME.Manager",
        "$XSAPPNAME.Employee"
      ]
    }
  ],
  "role-collections": [
    {
      "name": "TimesheetEmployee",
      "description": "Timesheet Employee Role Collection",
      "role-template-references": [
        "$XSAPPNAME.Employee"
      ]
    },
    {
      "name": "TimesheetManager",
      "description": "Timesheet Manager Role Collection",
      "role-template-references": [
        "$XSAPPNAME.Manager"
      ]
    },
    {
      "name": "TimesheetAdmin",
      "description": "Timesheet Administrator Role Collection",
      "role-template-references": [
        "$XSAPPNAME.Admin"
      ]
    }
  ],
  "oauth2-configuration": {
    "redirect-uris": [
      "https://*.applicationstudio.cloud.sap/**"
    ]
  },
  "attributes": []
}

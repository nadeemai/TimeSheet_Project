<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form">
    <Dialog
        id="_IDGenDialog"
        title="Edit Hours for {/editDayHours/day}"
        class="sapUiPopupWithPadding">
        <content>
            <VBox id="_IDGenVBox2" class="sapUiSmallMargin">
                <Label id="_IDGenLabel12" text="Hours" />
                <Input
                    id="hoursInput"
                    type="Number"
                    value="{/editDayHours/hours}"
                    liveChange="onFragmentHoursChange"
                    placeholder="Enter hours (0-24)" />
            </VBox>
        </content>
        <beginButton>
            <Button id="_IDGenButton5"
                text="Save"
                type="Emphasized"
                press="onSaveDayHours" />
        </beginButton>
        <endButton>
            <Button id="_IDGenButton6"
                text="Cancel"
                press="onCancelDayHours" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
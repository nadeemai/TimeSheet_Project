<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">

    <Dialog
        id="profileDialog"
        title="Employee Profile"
        class="sapUiPopupWithPadding myProfileDialog"
        contentWidth="520px"
        afterClose="onCloseProfileDialog">

        <VBox class="sapUiSmallMargin">

            <!-- Employee ID -->
            <HBox class="profileRow">
                <Label text="Employee ID:" class="profileLabel"/>
                <Text text="{view>/profile/employeeID}" class="profileValue"/>
            </HBox>

            <!-- First Name -->
            <HBox class="profileRow">
                <Label text="First Name:" class="profileLabel"/>
                <Text text="{view>/profile/firstName}" class="profileValue"/>
            </HBox>

            <!-- Last Name -->
            <HBox class="profileRow">
                <Label text="Last Name:" class="profileLabel"/>
                <Text text="{view>/profile/lastName}" class="profileValue"/>
            </HBox>

            <!-- Email -->
            <HBox class="profileRow">
                <Label text="Email:" class="profileLabel"/>
                <Text text="{view>/profile/email}" class="profileValue"/>
            </HBox>

            <!-- Manager Name -->
            <HBox class="profileRow">
                <Label text="Manager Name:" class="profileLabel"/>
                <Text text="{view>/profile/managerName}" class="profileValue"/>
            </HBox>

            <!-- Manager Email -->
            <HBox class="profileRow">
                <Label text="Manager Email:" class="profileLabel"/>
                <Text text="{view>/profile/managerEmail}" class="profileValue"/>
            </HBox>

            <!-- Active Status -->
            <HBox class="profileRow">
                <Label text="Active Status:" class="profileLabel"/>
                <ObjectStatus
                    text="{view>/profile/activeStatus}"
                    state="{= ${view>/profile/activeStatus} === 'Yes' ? 'Success' : 'Error' }"
                    class="profileValue"/>
            </HBox>

            <!-- Changed By -->
            <HBox class="profileRow">
                <Label text="Changed By:" class="profileLabel"/>
                <Text text="{view>/profile/changedBy}" class="profileValue"/>
            </HBox>

            <!-- User Role -->
            <HBox class="profileRow">
                <Label text="User Role:" class="profileLabel"/>
                <Text text="{view>/profile/userRole}" class="profileValue"/>
            </HBox>

        </VBox>

        <buttons>
            <Button text="Close" type="Emphasized" press="onCloseProfileDialog"/>
        </buttons>

    </Dialog>
</core:FragmentDefinition>

<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form">

    <Dialog
        id="profileDialog"
        title="Employee Profile"
        class="sapUiPopupWithPadding myProfileDialog"
        contentWidth="520px"
        afterClose="onCloseProfileDialog">

        <f:SimpleForm id="_IDGenSimpleForm"
            editable="false"
            layout="ResponsiveGridLayout"
            labelSpanXL="4"
            labelSpanL="4"
            labelSpanM="4"
            columnsXL="2"
            columnsL="2"
            columnsM="2"
            class="myProfileForm">

            <f:content>

                <Label text="Employee ID" class="profileLabel"/>
                <Text text="{view>/profile/employeeID}" class="profileText"/>

                <Label text="First Name" class="profileLabel"/>
                <Text text="{view>/profile/firstName}" class="profileText"/>

                <Label text="Last Name" class="profileLabel"/>
                <Text text="{view>/profile/lastName}" class="profileText"/>

                <Label text="Email" class="profileLabel"/>
                <Text text="{view>/profile/email}" class="profileText"/>

                <Label text="Manager Name" class="profileLabel"/>
                <Text text="{view>/profile/managerName}" class="profileText"/>

                <Label text="Manager Email" class="profileLabel"/>
                <Text text="{view>/profile/managerEmail}" class="profileText"/>

                <Label text="Active Status" class="profileLabel"/>
                <ObjectStatus
                    text="{view>/profile/activeStatus}"
                    state="{= ${view>/profile/activeStatus} === 'Yes' ? 'Success' : 'Error' }"/>

                <Label text="Changed By" class="profileLabel"/>
                <Text text="{view>/profile/changedBy}" class="profileText"/>

                <Label text="User Role" class="profileLabel"/>
                <Text text="{view>/profile/userRole}" class="profileText"/>

            </f:content>
        </f:SimpleForm>

        <buttons>
            <Button text="Close"
                type="Emphasized"
                class="btnCloseProfile"
                press="onCloseProfileDialog"/>
        </buttons>

    </Dialog>
</core:FragmentDefinition>

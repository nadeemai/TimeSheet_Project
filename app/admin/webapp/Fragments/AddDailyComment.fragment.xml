<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form">
    
    <Dialog
        id="addDailyCommentDialog"
        title="Add Daily Comment"
        contentWidth="600px"
        contentHeight="400px"
        resizable="true">
        
        <content>
            <VBox id="_IDGenVBox" class="sapUiMediumMargin">
                <Label id="_IDGenLabel" text="Select Day" design="Bold" class="sapUiMediumMarginBottom" />
                <ComboBox
                    id="dayComboBox"
                    selectedKey="{/newDailyComment/day}"
                    items="{/dailyComments}"
                    placeholder="Select a Day"
                    width="100%">
                    <core:Item id="_IDGenItem" key="{day}" text="{day}" />
                </ComboBox>
                
                <Label id="_IDGenLabel1" text="Comment" design="Bold" class="sapUiMediumMarginTop" />
                <TextArea
                    id="dailyCommentTextArea"
                    value="{/newDailyComment/comment}"
                    rows="6"
                    width="100%"
                    placeholder="Enter your daily comment here..."
                    growing="true"
                    growingMaxLines="10"
                    maxLength="1000"
                    liveChange="onDailyCommentLiveChange" />
                    
                <Text id="_IDGenText64" text="{= ${/newDailyComment/comment}.length + ' / 1000 characters'}" class="sapUiTinyMarginTop" />
            </VBox>
        </content>
        
        <buttons>
            <Button id="_IDGenButton1"
                text="Cancel"
                press="onCancelDailyComment"
                type="Transparent" />
            <Button id="_IDGenButton2"
                text="Save"
                type="Emphasized"
                press="onSaveDailyComment" />
        </buttons>
    </Dialog>
</core:FragmentDefinition>
<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form">
    <Dialog
        title="Task Details"
        class="sapUiPopupWithPadding"
        contentWidth="500px">
        <content>
            <VBox class="sapUiSmallMargin">
                <f:SimpleForm
                    editable="false"
                    layout="ResponsiveGridLayout"
                    labelSpanXL="4"
                    labelSpanL="4"
                    labelSpanM="4"
                    emptySpanXL="0"
                    emptySpanL="0"
                    emptySpanM="0"
                    columnsXL="2"
                    columnsL="2"
                    columnsM="2">
                    <f:content>
                        <Label text="Project"/>
                        <Text text="{/currentTaskDetail/projectName}"/>
                        
                        <Label text="Work Type"/>
                        <Text text="{/currentTaskDetail/workTypeName}"/>
                        
                        <Label text="Task Details"/>
                        <Text text="{/currentTaskDetail/comment}"/>
                        
                        <Label text="Status"/>
                        <ObjectStatus
                            text="{/currentTaskDetail/status}"
                            state="{= ${/currentTaskDetail/status} === 'Approved' ? 'Success' : 
                                     ${/currentTaskDetail/status} === 'Submitted' ? 'Warning' : 'None' }"/>
                        
                        <Label text="Monday"/>
                        <Text text="{path: '/currentTaskDetail/monday', type: 'sap.ui.model.type.Float', formatOptions: {minFractionDigits: 2, maxFractionDigits: 2}}"/>
                        
                        <Label text="Tuesday"/>
                        <Text text="{path: '/currentTaskDetail/tuesday', type: 'sap.ui.model.type.Float', formatOptions: {minFractionDigits: 2, maxFractionDigits: 2}}"/>
                        
                        <Label text="Wednesday"/>
                        <Text text="{path: '/currentTaskDetail/wednesday', type: 'sap.ui.model.type.Float', formatOptions: {minFractionDigits: 2, maxFractionDigits: 2}}"/>
                        
                        <Label text="Thursday"/>
                        <Text text="{path: '/currentTaskDetail/thursday', type: 'sap.ui.model.type.Float', formatOptions: {minFractionDigits: 2, maxFractionDigits: 2}}"/>
                        
                        <Label text="Friday"/>
                        <Text text="{path: '/currentTaskDetail/friday', type: 'sap.ui.model.type.Float', formatOptions: {minFractionDigits: 2, maxFractionDigits: 2}}"/>
                        
                        <Label text="Saturday"/>
                        <Text text="{path: '/currentTaskDetail/saturday', type: 'sap.ui.model.type.Float', formatOptions: {minFractionDigits: 2, maxFractionDigits: 2}}"/>
                        
                        <Label text="Sunday"/>
                        <Text text="{path: '/currentTaskDetail/sunday', type: 'sap.ui.model.type.Float', formatOptions: {minFractionDigits: 2, maxFractionDigits: 2}}"/>
                    </f:content>
                </f:SimpleForm>
            </VBox>
        </content>
        <beginButton>
            <Button
                text="Close"
                press="onCloseTaskDetailDialog"
                type="Emphasized"/>
        </beginButton>
    </Dialog>
</core:FragmentDefinition>
<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">

    <Dialog
        id="addEntryDialog"
        title="Add New Time Entry"
        contentWidth="500px"
        contentHeight="500px"
        resizable="true"
        class="sapUiResponsivePadding">

        <content>
            <f:SimpleForm
                id="simpleForm"
                layout="ResponsiveGridLayout"
                editable="true"
                class="sapUiSmallMargin">

                <f:content>
                    <!-- Activity Date -->
                    <Label id="_IDGenLabel22" text="Activity Date" />
                    <DatePicker
                        id="entryDatePicker"
                        value="{/newEntry/selectedDate}"
                        placeholder="Select any date in the week"
                        change="onEntryDatePickerChange" />

                    <!-- Project Selection -->
                    <Label id="_IDGenLabel23" text="Project" />
                    <ComboBox
                        id="projectComboBox"
                        selectedKey="{/newEntry/projectId}"
                        items="{
                            path: '/assignedProjects'
                        }"
                        placeholder="Select a Project">
                        <core:Item id="_IDGenItem3" key="{projectId}" text="{projectName}" />
                    </ComboBox>

                    <!-- Task Selection -->
                    <Label id="_IDGenLabel24" text="Task" />
                    <ComboBox
                        id="workTypeComboBox"
                        selectedKey="{/newEntry/workType}"
                        items="{
                            path: '/workTypes'
                        }"
                        placeholder="Select a Task">
                        <core:Item id="_IDGenItem4" key="{type}" text="{name}" />
                    </ComboBox>

                    <!-- âœ… Task Details -->
                    <Label id="_IDGenLabel34" text="Task Details" />
                    <TextArea
                        id="taskDetailsInput"
                        value="{/newEntry/taskDetails}"
                        rows="4"
                        placeholder="Enter details about the task"
                        width="100%" />

                    <!-- Hours Selection -->
                    <Label id="_IDGenLabel35" text="Hours" />
                    <ComboBox
                        id="hoursComboBox"
                        selectedKey="{/newEntry/hours}"
                        placeholder="Select Hours">
                        <core:Item id="_IDGenItem5" key="1" text="1" />
                        <core:Item id="_IDGenItem11" key="2" text="2" />
                        <core:Item id="_IDGenItem12" key="3" text="3" />
                        <core:Item id="_IDGenItem13" key="4" text="4" />
                        <core:Item id="_IDGenItem14" key="5" text="5" />
                        <core:Item id="_IDGenItem15" key="6" text="6" />
                        <core:Item id="_IDGenItem16" key="7" text="7" />
                        <core:Item id="_IDGenItem17" key="8" text="8" />
                        <core:Item id="_IDGenItem18" key="9" text="9" />
                        <core:Item id="_IDGenItem19" key="10" text="10" />
                        <core:Item id="_IDGenItem20" key="11" text="11" />
                        <core:Item id="_IDGenItem21" key="12" text="12" />
                        <core:Item id="_IDGenItem22" key="13" text="13" />
                        <core:Item id="_IDGenItem23" key="14" text="14" />
                        <core:Item id="_IDGenItem24" key="15" text="15" />
                    </ComboBox>
                </f:content>
            </f:SimpleForm>
        </content>

        <buttons>
            <Button
                id="saveButton"
                text="Save"
                type="Emphasized"
                press="onSaveNewEntry" />
            <Button
                id="saveAndNewButton"
                text="Save + New"
                press="onSaveAndNewEntry" />
            <Button
                id="cancelButton"
                text="Cancel"
                press="onCancelNewEntry"
                type="Transparent" />
        </buttons>
    </Dialog>
</core:FragmentDefinition>
